# Environment Configuration for Voss AI Assessment Tool
# Copy this file to .env and update with your actual values

# Project Information
PROJECT_NAME=AI_Readiness_Assessment
PROJECT_VERSION=1.3
ENVIRONMENT=production

# Google Analytics
GA_TRACKING_ID=your-google-analytics-id

# Domain Configuration
PRIMARY_DOMAIN=your-domain.com
ASSESSMENT_SUBDOMAIN=assessment.your-domain.com
GITHUB_REPO=https://github.com/your-username/your-repo

# Contact Information
CONTACT_EMAIL=your-email@your-domain.com
CONTACT_PHONE=your-phone-number
COMPANY_NAME=Your Company Name

# Security Settings
RATE_LIMIT_WINDOW_MS=300000
RATE_LIMIT_MAX_REQUESTS=3
MAX_INPUT_LENGTH=5000

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_GOOGLE_SHEETS=false
ENABLE_SECURITY_MONITORING=true
ENABLE_RATE_LIMITING=true

# Deployment Settings
NETLIFY_SITE_ID=your-netlify-site-id
DEPLOY_BRANCH=main
BUILD_COMMAND=
PUBLISH_DIRECTORY=/

# Supabase Configuration
SUPABASE_URL=your-supabase-project-url
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Session Secret (CHANGE IN PRODUCTION!)
SESSION_SECRET=your-super-secret-session-key-change-me

# Backend Services
NODE_ENV=production
PORT=3001
REDIS_HOST=redis
REDIS_PORT=6379

# HubSpot CRM Integration
HUBSPOT_ACCESS_TOKEN=your-hubspot-access-token
HUBSPOT_DEAL_THRESHOLD=70
HUBSPOT_PIPELINE_ID=your-pipeline-id
HUBSPOT_INITIAL_STAGE=appointmentscheduled

# Future Features
OPENAI_API_KEY=your-openai-api-key
STRIPE_PUBLISHABLE_KEY=your-stripe-key
EMAIL_SERVICE_API_KEY=your-email-service-key

# Frontend URL for CORS
FRONTEND_URL=https://your-domain.com

# Local Development (for dev environment only)
LOCAL_PORT=8000
LOCAL_HOST=localhost